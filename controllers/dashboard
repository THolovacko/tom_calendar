#! /usr/bin/ruby

puts "Content-type: text/html\n\n"

puts '<h1>the dashboard</h1>'
puts '<p>'

# apache environment variables
ENV.keys.each {|key| puts key.to_s + "\n"}
puts ENV['REQUEST_URI']


# stdin for handling post requests
ARGF.each do |line|
    puts line
end

puts ARGF.size


puts '</p>'

